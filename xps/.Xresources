! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
rofi.color-enabled: true
rofi.color-window: bg, cyn, bg
rofi.color-normal: bg, fg, bg, cyn, fg
rofi.color-active: #fdf6e3, #268bd2, #eee8d5, #268bd2, #fdf6e3
rofi.color-urgent: #fdf6e3, #dc322f, #eee8d5, #dc322f, #fdf6e3
rofi.width: 10
rofi.font: UW ttyp0 12


! ------------------------------------------------------------------------------
! 2BWM 
! ------------------------------------------------------------------------------

twobwm.border_width: 5 
twobwm.outer_border: 3 
twobwm.focus_color: wht 
twobwm.unfocus_color: blu 
twobwm.fixed_color: wht
twobwm.unkill_color: wht
twobwm.outer_border_color: bg 
twobwm.fixed_unkill_color: cyn
twobwm.inverted_colors: false
twobwm.enable_compton: true


