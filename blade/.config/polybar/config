[module/bspwm]
type = internal/bspwm

pin-workspaces = true

ws-icon-1 = I;1
ws-icon-2 = II;2
ws-icon-3 = III;3
ws-icon-4 = IV;4
ws-icon-5 = V;5
ws-icon-6 = VI;6
ws-icon-7 = VII;7
ws-icon-8 = VIII;8
ws-icon-9 = IX;9
ws-icon-10 = X;0
ws-icon-11 = 11;
ws-icon-12 = 12;
ws-icon-0 = 0:
ws-icon-default = 

format =<label-state><label-mode>

label-focused = %icon%
label-focused-foreground = ${colors.black}
label-focused-background = ${colors.white} 
label-focused-padding = 2 

label-occupied = %icon%
label-occupied-foreground = ${colors.white}
label-occupied-background = ${colors.black}
label-occupied-padding = 2 

label-urgent = %icon%
label-urgent-padding = 2

label-empty = 
label-empty-foreground = #4A484B 
label-empty-padding = 2


